<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:CD_Vault"
             x:Class="CD_Vault.MainPage"
             x:DataType="local:MainPage">

    <ScrollView>
        <VerticalStackLayout Padding="24" Spacing="20">
            <VerticalStackLayout Spacing="8">
                <Label Text="CD Vault" Style="{StaticResource Headline}" />
                <Label Text="Saját gyűjteményed kezelése és új albumok felfedezése" Style="{StaticResource SubHeadline}" />
            </VerticalStackLayout>

            <Border Style="{StaticResource CardBorder}">
                <Grid Padding="20" RowDefinitions="Auto,Auto" ColumnDefinitions="*,Auto" RowSpacing="12">
                    <VerticalStackLayout Grid.Row="0" Grid.Column="0" Spacing="6">
                        <Label Text="Gyűjtemény összegzés" Style="{StaticResource SectionTitle}" />
                        <Label Text="Mentsd el kedvenceidet, jegyzetelj, tervezd a következő vásárlást." Style="{StaticResource SectionSubtitle}" />
                    </VerticalStackLayout>
                    <Border Grid.Row="0" Grid.Column="1" BackgroundColor="DarkBlue" StrokeThickness="0" StrokeShape="RoundRectangle 14" Padding="12" VerticalOptions="Start">
                        <Label Text="{Binding CollectionCount}" FontSize="22" FontAttributes="Bold" HorizontalTextAlignment="Center" />
                    </Border>
                    <Label Grid.Row="1" Grid.ColumnSpan="2" Text="Lemezek száma" Style="{StaticResource SectionSubtitle}" />
                </Grid>
            </Border>

            <Border Style="{StaticResource CardBorder}">
                <Grid Padding="20" RowDefinitions="Auto,Auto" RowSpacing="12">
                    <Label Text="Mit szeretnél tenni ma?" Style="{StaticResource SectionTitle}" />
                    <Grid Grid.Row="1" ColumnDefinitions="*,*" ColumnSpacing="12">
                        <Button Text="Gyűjtemény" Background="Purple" Clicked="OnCollectionClicked" />
                        <Button Text="Felfedezés" Background="Blue" Clicked="OnDiscoverClicked" Grid.Column="1" />
                    </Grid>
                </Grid>
            </Border>

            <Border Style="{StaticResource CardBorder}">
                <Grid Padding="20" RowDefinitions="Auto,Auto" RowSpacing="12">
                    <Label Text="Tippek" Style="{StaticResource SectionTitle}" />
                    <Label Grid.Row="1" Text="Használd a Felfedezés oldalt az iTunes katalógus böngészéséhez, majd egy kattintással add hozzá a kedvenceket." Style="{StaticResource SectionSubtitle}" />
                </Grid>
            </Border>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
